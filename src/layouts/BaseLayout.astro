---
import Logo from "../components/Logo.astro";
import Navbar from "../components/Navbar.astro";
import GridController from "../components/GridController.tsx";
import Base from "../styles/base.css";
import Header from "../styles/header.css";
import Grid from "../styles/grid.css";
import Card from "../styles/card.css";
import Project from "../styles/project.css";
const { title = "Portfolio" } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<link rel="stylesheet" href={Base} />
		<link rel="stylesheet" href={Header} />
		<link rel="stylesheet" href={Grid} />
		<link rel="stylesheet" href={Card} />
		<link rel="stylesheet" href={Project} />
	</head>
	<body>
		<header class="site-header">
			<div class="container topbar">
				<Navbar />
				<Logo text="SUSAN BUTH" />
				<div class="right-controls">
					<GridController client:idle />
				</div>
			</div>
			<div class="container">
				<div class="tabs">
					<!-- The tabs are handled within GridController; markup kept for spacing -->
				</div>
			</div>
		</header>
		<main class="container">
			<slot />
		</main>
	</body>
</html>
